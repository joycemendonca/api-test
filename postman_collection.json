{
  "info": {
    "name": "TODO API Testing Playground",
    "description": "Complete collection for testing the TODO API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:3000",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"newuser@example.com\",\n  \"password\": \"password123\",\n  \"name\": \"New User\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "register"]
            }
          }
        },
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('token', response.data.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"tester1@example.com\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/auth/login",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "login"]
            }
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/auth/logout",
              "host": ["{{baseUrl}}"],
              "path": ["api", "auth", "logout"]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/users/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "me"]
            }
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Name\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/me",
              "host": ["{{baseUrl}}"],
              "path": ["api", "users", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Todos",
      "item": [
        {
          "name": "Create Todo",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"My new todo\",\n  \"description\": \"Optional description\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/todos",
              "host": ["{{baseUrl}}"],
              "path": ["api", "todos"]
            }
          }
        },
        {
          "name": "Get All Todos",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/todos",
              "host": ["{{baseUrl}}"],
              "path": ["api", "todos"]
            }
          }
        },
        {
          "name": "Get Todos (Completed)",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/todos?completed=true",
              "host": ["{{baseUrl}}"],
              "path": ["api", "todos"],
              "query": [
                {
                  "key": "completed",
                  "value": "true"
                }
              ]
            }
          }
        },
        {
          "name": "Search Todos",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/todos?search=test",
              "host": ["{{baseUrl}}"],
              "path": ["api", "todos"],
              "query": [
                {
                  "key": "search",
                  "value": "test"
                }
              ]
            }
          }
        },
        {
          "name": "Get Todo by ID",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/todos/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "todos", "1"]
            }
          }
        },
        {
          "name": "Update Todo",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated title\",\n  \"description\": \"Updated description\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/todos/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "todos", "1"]
            }
          }
        },
        {
          "name": "Mark as Completed",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/todos/1/complete",
              "host": ["{{baseUrl}}"],
              "path": ["api", "todos", "1", "complete"]
            }
          }
        },
        {
          "name": "Delete Todo",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/todos/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "todos", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "Error Simulation",
      "item": [
        {
          "name": "400 Bad Request",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/errors/400",
              "host": ["{{baseUrl}}"],
              "path": ["api", "errors", "400"]
            }
          }
        },
        {
          "name": "401 Unauthorized",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/errors/401",
              "host": ["{{baseUrl}}"],
              "path": ["api", "errors", "401"]
            }
          }
        },
        {
          "name": "403 Forbidden",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/errors/403",
              "host": ["{{baseUrl}}"],
              "path": ["api", "errors", "403"]
            }
          }
        },
        {
          "name": "404 Not Found",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/errors/404",
              "host": ["{{baseUrl}}"],
              "path": ["api", "errors", "404"]
            }
          }
        },
        {
          "name": "500 Internal Server Error",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/errors/500",
              "host": ["{{baseUrl}}"],
              "path": ["api", "errors", "500"]
            }
          }
        },
        {
          "name": "Delayed Response (2s)",
          "request": {
            "method": "GET",
            "url": {
              "raw": "{{baseUrl}}/api/errors/delay?ms=2000",
              "host": ["{{baseUrl}}"],
              "path": ["api", "errors", "delay"],
              "query": [
                {
                  "key": "ms",
                  "value": "2000"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": ["{{baseUrl}}"],
          "path": ["health"]
        }
      }
    }
  ]
}
